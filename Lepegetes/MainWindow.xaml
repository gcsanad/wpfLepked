<Window x:Class="Lepegetes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lepegetes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <Button Height="25" x:Name="btnLepkedes" Margin="10" Content="Lépés" FontSize="15" VerticalAlignment="Bottom" Click="btnLepkedes_Click"/>

            <Border Grid.Row="1"  BorderBrush="Black" Margin="10" BorderThickness="2">
                <Grid Grid.Row="1" x:Name="gridTabla" Margin="10">
                </Grid>
            </Border>
    </Grid>


</Window>
